<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: linear-gradient(to bottom, #f7c08a, #f7a76c);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
    <VBox alignment="CENTER" spacing="15">

        <Label text="Forgot Password" style="-fx-font-size: 24; -fx-text-fill: white; -fx-font-weight: bold;" />
        <TextField promptText="Enter Username" prefWidth="250.0" style="-fx-background-radius: 10;" />
        <TextField promptText="What is your pets name" prefWidth="250.0" style="-fx-background-radius: 10;" />
        <TextField promptText="Enter Security Answer" prefWidth="250.0" style="-fx-background-radius: 10;" />

        <Button text="Submit" prefHeight="39.0" prefWidth="150.0" style="-fx-font-size: 18; -fx-background-color: #ffffff; -fx-text-fill: #2193b0; -fx-background-radius: 10;" />
    </VBox>
</StackPane>
