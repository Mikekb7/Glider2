<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane prefHeight="600.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Glider.common.SignUpController">
    <VBox alignment="CENTER" spacing="15" style="-fx-background-color: linear-gradient(to bottom, #f7c08a, #f7a76c);" prefWidth="400.0">
        <Label text="Sign Up" style="-fx-font-size: 24; -fx-text-fill: white; -fx-font-weight: bold;" />

        <TextField fx:id="usernameField" promptText="Username" prefWidth="250.0" />
        <PasswordField fx:id="passwordField" promptText="Password" prefWidth="250.0" />
        <TextField fx:id="firstNameField" promptText="First Name" prefWidth="250.0" />
        <TextField fx:id="lastNameField" promptText="Last Name" prefWidth="250.0" />
        <TextField fx:id="emailField" promptText="Email" prefWidth="250.0" />
        <TextField fx:id="addressField" promptText="Address" prefWidth="250.0" />
        <TextField fx:id="cityField" promptText="City" prefWidth="250.0" />
        <TextField fx:id="stateField" promptText="State" prefWidth="250.0" />
        <TextField fx:id="zipCodeField" promptText="Zip Code" prefWidth="250.0" />
        <TextField fx:id="securityQuestionField" promptText="Security Question" prefWidth="250.0" />
        <TextField fx:id="securityAnswerField" promptText="Security Answer" prefWidth="250.0" />
        <Button text="Sign Up" fx:id="signUpButton" style="-fx-background-color: white; -fx-text-fill: #2193b0; -fx-background-radius: 10;" />
    </VBox>
</StackPane>
