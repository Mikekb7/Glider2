<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane fx:id="mainMenuPane" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: linear-gradient(to bottom, #f7c08a, #f7a76c);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
    <VBox alignment="CENTER" spacing="20">
        <!-- Title -->
        <Label style="-fx-font-size: 30; -fx-text-fill: white; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, black, 5, 0.5, 1, 1);" text="Book Your Next Trip" />

        <!-- Login Form -->
        <VBox alignment="CENTER" spacing="10">
            <!-- Username -->
            <TextField fx:id="usernameField" promptText="Username" prefWidth="50" style="-fx-background-radius: 10; -fx-padding: 5;" />
            <!-- Password -->
            <PasswordField fx:id="passwordField" promptText="Password" prefWidth="50" style="-fx-background-radius: 10; -fx-padding: 5;" />
            <!-- Login Button -->
            <Button fx:id="loginButton" text="Login" prefHeight="39.0" prefWidth="200.0" style="-fx-font-size: 18; -fx-background-color: #ffffff; -fx-text-fill: #2193b0; -fx-background-radius: 10;" />
        </VBox>

        <!-- Additional Buttons -->
        <VBox alignment="CENTER" spacing="10">
            <!-- Forgot Password -->
            <Button fx:id="forgotPasswordButton" text="Forgot Password?" style="-fx-font-size: 14; -fx-background-color: transparent; -fx-text-fill: #ffffff; -fx-underline: true;" />
            <!-- Sign Up -->
            <Button fx:id="signUpButton" text="Don't have an account? Sign Up" style="-fx-font-size: 14; -fx-background-color: transparent; -fx-text-fill: #ffffff; -fx-underline: true;" />
        </VBox>
    </VBox>
</StackPane>
